{
  "name": "treejs",
  "displayName": "TreeJS",
  "description": "A tool used to create dependency tree graphs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "treejs.analyze",
        "title": "Analyze tree"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "analyzer",
          "title": "Analyzer",
          "icon": "./tree.svg"
        }
      ]
    },
    "views": {
      "analyzer": [
        {
          "id": "entryDir",
          "name": "Entry directory",
          "contextualTitle": "Select the file or directory to analyze"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "entryDir",
        "contents": "Select file or directory to create tree graph.\n[Select directory](command:treejs.analyze)"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.16.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}